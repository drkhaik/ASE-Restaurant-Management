<div class="container-form-add-dish">
    <div class="return-buttons">
        <a href="/dishes">Return</a>
    </div>
    <div class="form-add-dish">
        <h2>
            <%= title %>
        </h2>
        <form action="/dishes/add-dish" method="POST">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="5" cols="140" required></textarea>
            </div>
            <div>
                <label for="category">Category:</label>
                <select id="category" name="category" required>
                    <option value="starter">Starter</option>    
                    <option value="main_dish">Main Dish</option>    
                    <option value="dessert">Dessert</option>    
                </select>
            </div>
            <div>
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" min="0" max="10000" step="0.01" required>
            </div>
            <button type="submit">Add dish</button>
           
        </form>
    </div>
</div>