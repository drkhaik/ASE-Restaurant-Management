<div class="container-form-add-dish">
    <div class="return-buttons">
        <a href="/dishes">Return</a>
    </div>
    <div class="form-add-dish">
        <h2>
            <%= title %>
        </h2>
    <form action="/dishes/update-dish" method="POST">
        <input type="hidden" name="_id" value="<%= dish.id %>">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= dish.name %>" required><br>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="5" cols="140" required><%= dish.description %></textarea>
        </div>
        <div>
            <label for="category">Category:</label>
            <select id="category" name="category" required>
                <option value="starter" <%= dish.category === 'starter' ? 'selected' : '' %>>Starter</option>
                <option value="main_dish" <%= dish.category === 'main_dish' ? 'selected' : '' %>>Main Dish</option>
                <option value="dessert" <%= dish.category === 'dessert' ? 'selected' : '' %>>Dessert</option>
            </select>
        </div>
        <div>
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" min="0" max="10000" step="0.01" value="<%= dish.price %>" required>
        </div>
        
        <button type="submit">Update</button>
    </form>
    </div>
</div>