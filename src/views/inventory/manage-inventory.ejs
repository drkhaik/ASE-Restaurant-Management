<div class="manage-user">
    <h1>
        <%= title %>
    </h1>
    <div class="action-buttons">
        <button class="button-add">
            <a href="/add-inventory">Add New Inventory Item</a>
        </button>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (inventories && inventories.length > 0) { %>
                <% inventories.forEach(inventory => { %>
                    <tr>
                        <td>
                            <%= inventory.name %>
                        </td>
                        <td>
                            <%= inventory.quantity %>
                        </td>
                        <td>
                            <%= inventory.price %>
                        </td>
                        <td>
                            <%= inventory.category %>
                        </td>
                        <td>
                            <%= inventory.description %>
                        </td>
                        <td>
                            <button class="button-update">
                                <a href="/edit-inventory/<%= inventory.id %>" class="button-update">Update</a>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="6">No inventory items found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
